{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "epnro_sys",
  "version": "0.1.1",
  "identifier": "com.epnro.management",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EPNRO Management System",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "store": null,
    "opener": null
  },
  "bundle": {
    "active": true,
    "shortDescription": "EnviroTrace Management System",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "wix": {
        "language": "en-US",
        "bannerPath": "icons/WixBanner.bmp",
        "dialogImagePath": "icons/WixDialog.bmp"
      },
      "nsis": {
        "headerImage": "icons/WixBanner.bmp",
        "sidebarImage": "icons/WixDialog.bmp",
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
