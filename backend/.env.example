# Copy this file to .env and fill in values. Do NOT commit your real .env.

# App database URL (async for runtime)
# Use INTERNAL URL on Render services, EXTERNAL from your local machine
DATABASE_URL="postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME"

# Optional: Explicit sync URL for Alembic (usually not required; env.py converts automatically)
# ALEMBIC_DATABASE_URL="postgresql+psycopg://USER:PASSWORD@HOST:PORT/DBNAME"

SECRET_KEY="change_me_to_a_strong_random_value"
ACCESS_TOKEN_EXPIRE_MINUTES=600
ALGORITHM="HS256"

