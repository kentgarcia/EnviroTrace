{
  "expo": {
    "name": "Government Emission Mobile",
    "slug": "gov-emission-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.epnro.govemission"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE"
      ],
      "package": "com.epnro.govemission",
      "versionCode": 1,
      "minSdkVersion": 23,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "usesCleartextTraffic": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-sqlite",
        {
          "enableFTS": true
        }
      ],
      "expo-font",
      "expo-secure-store",
      "./plugins/withNetworkSecurityConfig.js"
    ],
    "scheme": "gov-emission",
    "extra": {
      "eas": {
        "projectId": "966ce2df-01f4-4e40-a136-4e2c63429daa"
      },
      "apiUrl": "https://envirotrace.onrender.com/api/v1"
    }
  }
}
